<?xml version="1.0" encoding="utf-8"?>

<layout>

    <data>

        <variable
            name="vm"
            type="com.example.braintrainer.GameViewModel" />
    </data>


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:padding="10dp"
        tools:context=".GameFragment">

        <TextView
            android:id="@+id/timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@android:color/holo_blue_light"
            android:elevation="10dp"
            android:padding="20dp"
            android:text="@{vm.timer}"
            android:textAlignment="center"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:background="@android:color/holo_green_light"
            android:elevation="10dp"
            android:padding="20dp"
            android:text="@{vm.corr_total}"
            android:textAlignment="center"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/expression"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/score"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            android:text="@{vm.express}"
            android:background="@android:color/background_light"
            android:textAlignment="center"
            android:textSize="40sp" />

        <GridLayout
            android:id="@+id/grid"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_below="@id/expression"
            android:columnCount="2"
            android:elevation="20dp"
            android:rowCount="2">

            <Button
                android:id="@+id/button0"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:backgroundTint="@color/red"
                android:text="@{vm.answerList[0]}"
                android:elevation="8dp"
                android:tag="0"
                android:textSize="50sp" />

            <Button
                android:id="@+id/button1"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:backgroundTint="@android:color/holo_green_light"
                android:elevation="8dp"
                android:text="@{vm.answerList[1]}"
                android:tag="1"
                android:textSize="50sp" />

            <Button
                android:id="@+id/button2"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:backgroundTint="@color/orange"
                android:elevation="8dp"
                android:text="@{vm.answerList[2]}"
                android:tag="2"
                android:textSize="50sp" />

            <Button
                android:id="@+id/button3"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:backgroundTint="@color/blue"
                android:text="@{vm.answerList[3]}"
                android:elevation="8dp"
                android:tag="3"
                android:textSize="50sp" />

        </GridLayout>

        <TextView
            android:id="@+id/cor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/grid"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:textSize="50sp" />

    </RelativeLayout>


</layout>
